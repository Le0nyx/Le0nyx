<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="340.0" prefWidth="550.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.j17_cashconverter.CashController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Enter Value:" />

   <TextField fx:id="InputArea" promptText="Enter Value here (just number and with a dot for comma)" />

   <Label text="Convert from:" />

   <ChoiceBox fx:id="UpperChoiceBox" prefWidth="150.0" />

   <Label text="Convert to:" />

   <ChoiceBox fx:id="LowerChoiceBox" prefWidth="150.0" />

   <Button fx:id="ConvertButton" mnemonicParsing="false" text="Click to Convert" onAction="#handleButtonClick"/>

   <TextArea fx:id="OutputArea" editable="false" prefHeight="200.0" prefWidth="200.0" />

</VBox>
